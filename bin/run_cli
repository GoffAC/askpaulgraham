#!/usr/bin/env bash

# run the helper apg CLI package
# 
# - $1 is the ID for the target essay
# - $2 is to toggle whether to update
#   "summary" or "answers"
# 
# example: ./bin/run_cli smart summary

id=$1
toggle=""

if [ $2 == "summary" ]; then
	toggle="-summary"
elif [ $2 == "answers" ]; then
	toggle="-answers"
else
  echo "invalid argument: '$2'"
  exit 1
fi

go run ./cmd/cli/apg/main.go -id $id $toggle